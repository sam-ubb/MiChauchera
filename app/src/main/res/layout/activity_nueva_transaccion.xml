<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".NuevaTransaccionActivity">

    <!-- Título de la actividad -->
    <TextView
        android:id="@+id/tvTituloTransaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva transacción"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tipo de Transacción (Ingreso / Gasto) -->
    <RadioGroup
        android:id="@+id/grupoTipoTransaccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloTransaccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingreso"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasto"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <!-- Monto -->
    <EditText
        android:id="@+id/campoMonto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Monto"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/grupoTipoTransaccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Categoría -->
    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/campoMonto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fecha -->
    <EditText
        android:id="@+id/campoFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha (dd/mm/aaaa)"
        android:inputType="date"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerCategoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción (Opcional) -->
    <EditText
        android:id="@+id/campoDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción (opcional)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/campoFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botones: Cancelar y Guardar -->
    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/campoDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/botonCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_weight="1" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/botonGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_weight="1"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
